<!-- HEAD  -->
<%- include('../partials/head') %>

    <link href="/css/productEdit.css" rel="stylesheet">
    <title>Edición de producto</title>
    </head>

    <body>
        <!-- HEADER  -->
        <%- include('../partials/header') %>
            <main>
                <div class="formBox">
                    <h5>Editar producto</h5>

                    <form autocomplete="off">

                        <input class="inputs" type="text" name="name" placeholder="Edita el nombre del producto">

                        <input class="inputs" type="number" name="price" min="1" placeholder="Edita el precio">

                        <select class="selection">
                            <option disabled selected="">Seleccione una categoría</option>
                            <option>Gabinetes</option>
                            <option>Almacenamiento</option>
                            <option>Procesadores</option>
                            <option>Placas de video</option>
                            <option>Monitores</option>
                            <option>Mouses</option>
                            <option>Teclados</option>
                            <option>Auriculares</option>
                            <option>Micrófonos</option>
                            <option>Web Cams</option>
                            <option>Mandos</option>
                            <option>Parlantes</option>
                        </select>


                        <input class="inputs" type="text" name="brand" placeholder="Edita la marca">

                        <input class="inputs" type="number" name="discount" min="1" max="100"
                            placeholder="Edita el porcentaje del descuento">


                        <input class="inputs" id='inputImage' type="file" accept=".png, .jpg, .jpeg" name="images">


                        <textarea class="textarea" placeholder="Edita la descripcion del producto"></textarea>

                        <button type="submit" class="buttons">Editar</button>

                    </form>

                </div>
            </main>

            <!-- FOOTER  -->
            <%- include('../partials/footer') %>