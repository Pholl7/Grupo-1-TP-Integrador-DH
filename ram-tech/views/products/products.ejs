<!-- HEAD -->
<%- include('../partials/head') %>
</head>

<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	
	<main>
		<section class="highlight">
			
			<div class="title-section">

				<h2 class="title">
				<strong> Todos nuestros productos </strong>
				</h2>
			</div>

			<div class="products">
			<% products.forEach(element => { %>
				<article>
					<a href="/products/product-detail/<%=element.id %>" id="product-redirect">
						<img src="/images/images-products/<%= element.image %>" alt="<%=element.name %>">
						<div class="main-article">
							<i class="fa-solid fa-heart heart-icon"></i>
							<h4 class="name"><%=element.name %></h4>
							<div class="description-container">
								<p class="price">$<%=element.price %> </p>
								<p class="discount"><%=element.discount %>% Off</p>
							</div>
						</div>
					</a>
				</article>
				<%}); %> 
			</div>
		</section>
	</main>
	<!-- FOOTER  -->
<%- include('../partials/footer')  %>
