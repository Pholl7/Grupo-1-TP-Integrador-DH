<!-- HEAD  -->
<%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/productDetail.css">
    <title>Detalle del Producto</title>
    </head>

    <body>

        <!-- HEADER  -->
        <%- include('../partials/header') %>

            <main>
                <div class="product-title">
                    <h2>
                        <%= product.name %>
                    </h2>
                </div>

                <section class="main-product">
                    <div class="images-product">
                        <div class="first-img">
                            <% if (product.product_images.length===0) { %>
                                <img src="/images/images-products/default-product.png" alt="Imagen del producto"
                                    class="principal-image">

                                <% } else { %>
                                    <img src="/images/images-products/<%= product.product_images[0].name %>"
                                        alt="Imagen del Producto" class="first-image">
                        </div>
                        <% if (product.product_images.length> 1) { %>
                            <div class="second-img">
                                <% product.product_images.slice(1).forEach((image, i)=> { %>
                                    <% if (i <=1) { %>
                                        <img id="image<%=i %>" src="/images/images-products/<%= image.name %>" alt="Imagen del
                                    Producto" class="secondary-image">
                                        <% } %>
                                            <% }) %>
                                                <% } %>
                                                    <% } %>
                            </div>
                    </div>
                    <% let finalPrice = product.price - (product.price*product.discount)/100; %>
                    <div class="product-description">
                        <div class="price-product">
                            <h2 id="final-price">
                                $<%= finalPrice %>
                            </h2>
                        </div>

                        <% if(product.discount> 0) { %>
                            <div class="product-discount">
                                <h4>
                                    <%= product.discount %>% de descuento!
                                </h4>
                                <p>Precio anterior: </p>
                                <p>
                                    <%= product.price %>
                                </p>
                            </div>
                            <% } %>

                                <div class="dues">
                                    <h4> Cuotas? Acá!</h4>
                                    <p> Hasta 12 cuotas sin interes</p>
                                    <select class="chekbox" id="checkbox">
                                        <!-- <input type="radio" name="three" value="3">
                                        <label for="three" class="three">3 cuotas</label>

                                        <input type="radio" name="three" value="6">
                                        <label for="six" class="six">6 cuotas</label>

                                        <input type="radio" name="three" value="9">
                                        <label for="nine" class="nine">9 cuotas</label>

                                        <input type="radio" name="three" value="12">
                                        <label for="twelve" class="twelve">12 cuotas</label> -->
                                        <option value="0" selected>Seleccionar</option>
                                        <option value="3">3 cuotas</option>
                                        <option value="6">6 cuotas</option>
                                        <option value="9">9 cuotas</option>
                                        <option value="12">12 cuotas</option>
                                    </select>
                                    <p id="total-dues"></p>
                                </div>

                                <div class="recive-product">
                                    <h4> Recibi tu producto </h4>
                                    <label for="delivery-method">Formas de entrega</label>
                                    <select class="selection" name="recive-product" id="delivery-method">
                                        <option value="home">Envio a domicilio</option>
                                        <option value="post">Retiro en correo</option>
                                        <option value="free">Retiro en tienda</option>
                                    </select>
                                    <p id="shipping-cost"> </p>
                                </div>
                                <% if (locals.isLogged) { %>
                                    <form action="/products/addProductToCart/<%= product.id %>" method="POST">
                                        <input class="buy-buttons" type="submit" value="Añadir al carrito">
                                        <input class="buy-buttons" type="number" value="Elige la cantidad" name="amount"
                                            min="1" placeholder="Elige la cantidad">
                                    </form>
                                    <% } %>
                    
                                        <article class="botones">
                                            <% if (locals.admin) { %>
                                                <a href="/products/product-edit/<%=product.id %>"
                                                    id="product-redirect"><input class="buttons" type="submit"
                                                        value="Editar"></a>
                                                <a href="/products/edit-images/<%=product.id %>"
                                                    id="product-redirect"><input class="buttons" type="submit"
                                                        value="Editar imágenes"></a>
                                                <form action="/products/delete/<%= product.id %>?_method=DELETE"
                                                    method="POST">
                                                    <input class="buttons" type="submit" value="Borrar"
                                                        id="delete-button"></input>
                                                </form>
                                                <% } %>
                                        </article>
                    </div>



                </section>
                <section class="description-under-product">
                    <h2>Caracteristicas generales </h2>
                    <p>
                        <%=product.description%>
                    </p>
                </section>
                <script src="/js/productDetail.js"></script>
            </main>

            <!-- FOOTER  -->
            <%- include('../partials/footer') %>