<!-- HEAD  -->
<%- include('partials/head')  %>

  <title>RamTech</title> 
</head>

<body>
  
  <!-- HEADER  -->
  <%- include('partials/header')  %>

  <main>
    <section class="carousel">
      <i><img src="/images/carousel1.jpg" alt="Imagen de oferta"></i>
      <i class="tablet"><img src="/images/carousel2.jpg" alt="Imagen de oferta"></i>
      <i class="desktop"><img src="/images/carousel3.jpg" alt="Imagen de oferta"></i>
    </section>
    <section class="categories">
      <nav>
        <ul>
          <li><i class="fa-solid fa-microchip"></i></li>
          <li><i class="fa-solid fa-desktop"></i></li>
          <li><i class="fa-solid fa-computer-mouse"></i></li>
          <li><i class="fa-regular fa-keyboard"></i></li>
          <li><i class="fa-solid fa-print"></i></li>
          <li><i class="fa-solid fa-microphone"></i></li>
          <li><i class="fa-solid fa-headset"></i></li>
          <li><i class="fa-solid fa-hard-drive"></i></li>
        </ul>
      </nav>
    </section>

    <section class="highlight">
		
      <div class="title-section">
  
        <h2 class="title">Destacados del mes</h2>
      </div>
  
      <div class="products">
      <% for (let i = 0; i<3; i++) { %>
        <article>
          <div class="description-container">
            <a href="/products/product-detail/<%= products[i].id %> " id="product-redirect">
              <img src="/images/images-products/<%= products[i].image %>" alt="<%=products[i].name %>">
              <i class="fa-solid fa-heart heart-icon"></i>
              <div class="main-container">
                <h4 class="name"><%=products[i].name %></h4>
                <p class="price">$<%=products[i].price %> </p>
                <p class="discount"><%=products[i].discount %>% Off</p>
              </div>
            </a>
          </div>
        </article>
        <%}; %> 
      </div>
    </section>

    <section class="buttons-create-products">
      <a href="/products" id="product-redirect"><input class="buttons" type="submit" value="Todos los productos"></a>
      <% if (locals.isLogged) { %>
      <a href="/products/product-create" id="product-redirect"><input class="buttons" type="submit" value="Crea tu producto"></a>
      <% } %>
    </section>

    <section class="setup-products">

      <div class="title-section">
        <h2 class="title">Arm√° tu Setup ideal</h2>
        <img src="/images/setups-gamers.jpg" alt="Setup-products">
      </div>

      <div class="setup">
        <div class="categories-box">
          <div class="main-box">
            <img src="/images/images-categories/cat-gabinete.jpeg" alt="">
            <div class="box">
              <a href="/#">
                <i class="fa-solid fa-computer"></i>
                <h4 class="name">Gabinetes</h4>
              </a>
            </div>
          </div>

          <div class="main-box">
            <img src="/images/images-categories/cat-almacenamiento.jpeg" alt="">
            <div class="box">
              <a href="/#">
                <i class="fa-solid fa-hard-drive"></i>
                <h4 class="name">Almacenamiento</h4>
              </a>
            </div>
          </div>

          <div class="main-box">
            <img src="/images/images-categories/cat-procesador.jpg" alt="">
            <div class="box">
              <a href="/#">
                <i class="fa-solid fa-microchip"></i>
                <h4 class="name">Procesadores</h4>
              </a>
            </div>
